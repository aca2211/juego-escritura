<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.juegoescritura.controller.MenuController"
      alignment="CENTER" spacing="12" prefWidth="480" prefHeight="260" >
    <Label text="Escritura Rápida" styleClass="title"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Récord:"/>
        <Label fx:id="lblHighScore" text="0" styleClass="big-label"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Puntuación de sesión:"/>
        <Label fx:id="lblSessionScore" text="0" styleClass="big-label"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnStart" text="Iniciar Juego" onAction="#onStartClicked"/>
        <Button fx:id="btnReset" text="Reiniciar Récord" onAction="#onResetHighScore"/>
    </HBox>

    <Label text="Instrucciones: escribe la palabra exacta antes de que termine el tiempo. Al subir la puntuación, el tiempo se reduce." wrapText="true" maxWidth="420"/>
</VBox>

